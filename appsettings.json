{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AIProvider": {
    "Provider": "Ollama",
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "ModelId": "llava:13b",
      "MaxTokens": 4000,
      "RequestTimeout": 100,
      "Temperature": 0.7
    },
    "OpenAI": {
      "ApiKey": "",
      "ModelId": "gpt-4o",
      "BaseUrl": "https://api.openai.com/v1",
      "MaxTokens": 4000,
      "Temperature": 0.7,
      "RequestTimeout": 60,
      "Organization": ""
    }
  },
  "FileUpload": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".pdf", ".docx", ".jpeg", ".jpg", ".png"],
    "TempDirectory": "UploadTemp"
  },
  "Threading": {
    "QuestionsPerThread": 5,
    "MaxConcurrentThreads": 8
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/exam-recognition-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}